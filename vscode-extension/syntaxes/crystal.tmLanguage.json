{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Crystal",
  "scopeName": "source.crystal",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#symbols" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#constants" },
    { "include": "#operators" },
    { "include": "#annotations" },
    { "include": "#macros" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.crystal",
          "match": "#.*$"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.crystal",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.crystal",
              "match": "\\\\."
            },
            {
              "name": "meta.embedded.line.crystal",
              "begin": "#{",
              "end": "}",
              "patterns": [{ "include": "$self" }]
            }
          ]
        },
        {
          "name": "string.quoted.single.crystal",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.crystal",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "symbols": {
      "patterns": [
        {
          "name": "constant.other.symbol.crystal",
          "match": ":[a-zA-Z_][a-zA-Z0-9_]*[?!]?"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.crystal",
          "match": "\\b(0[xX][0-9a-fA-F_]+|0[oO][0-7_]+|0[bB][01_]+|[0-9][0-9_]*(\\.[0-9_]+)?([eE][+-]?[0-9_]+)?)\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.crystal",
          "match": "\\b(if|unless|elsif|else|case|when|while|until|for|break|next|return|yield|begin|rescue|ensure|end|do|then)\\b"
        },
        {
          "name": "keyword.other.crystal",
          "match": "\\b(def|class|module|struct|enum|lib|fun|alias|include|extend|macro|abstract|private|protected|property|getter|setter|as|as?|is_a?|responds_to?|nil?|typeof|sizeof|instance_sizeof|pointerof|out|uninitialized|select|with|annotation|verbatim|of|in|union)\\b"
        },
        {
          "name": "keyword.control.crystal",
          "match": "\\b(require|asm)\\b"
        },
        {
          "name": "support.function.spec.crystal",
          "match": "\\b(describe|context|it|pending|before_each|after_each|before_all|after_all)\\b"
        },
        {
          "name": "support.function.io.crystal",
          "match": "\\b(puts|print|p|pp|gets|read|write|flush)\\b"
        },
        {
          "name": "support.function.builtin.crystal",
          "match": "\\b(raise|abort|exit|sleep|spawn|at_exit|loop|caller|system)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.crystal",
          "match": "\\b(true|false|nil|self|super)\\b"
        },
        {
          "name": "constant.other.crystal",
          "match": "\\b[A-Z][A-Z0-9_]*\\b"
        },
        {
          "name": "variable.other.constant.crystal",
          "match": "@@?[a-zA-Z_][a-zA-Z0-9_]*"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.crystal",
          "match": "(=>|->|\\|\\||&&|==|!=|<=|>=|<|>|\\+|-|\\*|/|%|\\*\\*|&|\\||\\^|~|<<|>>|=~|!~)"
        }
      ]
    },
    "annotations": {
      "patterns": [
        {
          "name": "meta.annotation.crystal",
          "match": "@\\[([a-zA-Z_][a-zA-Z0-9_]*)\\]",
          "captures": {
            "1": { "name": "entity.name.type.annotation.crystal" }
          }
        }
      ]
    },
    "macros": {
      "patterns": [
        {
          "name": "meta.macro.crystal",
          "begin": "\\{%",
          "end": "%\\}",
          "patterns": [{ "include": "$self" }]
        },
        {
          "name": "meta.macro.crystal",
          "begin": "\\{\\{",
          "end": "\\}\\}",
          "patterns": [{ "include": "$self" }]
        }
      ]
    }
  }
}
